{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "figma-plugin/**/*.ts",
    "figma-plugin/**/*.js",
    "figma-plugin/**/*.tsx",
    "figma-plugin/**/*.jsx"
  ]
}
